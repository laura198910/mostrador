<p id="notice"><%= notice %></p>

<div class="row">
<div class="container">
<div class="col-md-4">
    <h2>Lista de Productos</h2>
</div>
<div class="col-md-4">
</div>
<div class="col-md-4">
    <%= link_to new_producto_path, :class => 'btn btn-primary' do %>
      <i class="glyphicon glyphicon-plus"></i>
    <% end %>
</div>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th><b><i><center>Imagen</center></i></b></th>
      <th><b><i><center>Nombre</center></i></b></th>
      <th><b><i><center>Descripcion</center></i></b></th>
      <th><b><i><center>Categoria</center></i></b></th>
      <th><b><i><center>Precio</center></i></b></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @productos.each do |producto| %>

      <tr>
        <th><%= image_tag(producto.imagenproducto.url) %></th>
        <td><%= producto.nombre %></td>
        <td><%= producto.descripcion %></td>
        <td><%= producto.categoria_id %></td>
        <td><%= producto.precio %></td>
        
        <td><%= link_to  producto, class:"btn btn-success"  do %>
           
            <i class="glyphicon glyphicon-eye-open"></i><br>
          <% end %>
          <%= link_to edit_producto_path(producto), class:" btn btn-info" do  %>
            
            <i class="glyphicon glyphicon-pencil"></i><br>
          <% end %>
          <%= link_to  producto, method: :delete, data: { confirm: 'Estas seguro?' }, class:'btn btn-danger' do %>
            
            <i class="glyphicon glyphicon-trash"></i><br>
          <% end %>
        </td>
      </tr>
    <% end %>
</tbody>
</table>
</div>
</div>
</div>
<br>





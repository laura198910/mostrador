<p id="notice"><%= notice %></p>
<table class="table table ">

<h3>Lista de  Productos</h3>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Categoria</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <%= link_to 'Nuevo  Producto', new_producto_path,:class => 'btn btn-primary'  %>
  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.nombre %></td>
        <td><%= producto.descripcion %></td>
        <td><%= producto.categoria_id %></td>
        <td><%= producto.precio %></td>
        <td><%= link_to  producto, class:"btn btn-success"  do %>
            Ver
            <i class="glyphicon glyphicon-plus"></i>
          <% end %>
          <%= link_to edit_producto_path(producto), class:" btn btn-info" do  %>
            Editar
            <i class="glyphicon glyphicon-pencil"></i>
          <% end %>
          <%= link_to  producto, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' do %>
            Eliminar
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</table>


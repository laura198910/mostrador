<p id="notice"><%= notice %></p>
<div class="row">
<div class="container">
<div class="col-md-4">
    <h2>Lista de Presupuestos</h2>
</div>
<div class="col-md-4">
</div>
<div class="col-md-4">
    <%= link_to  new_presupuesto_path, class: "btn btn-primary" do %>
      <i class="glyphicon glyphicon-plus"></i>
    <% end %>
</div>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th><b><i><center>Presupuesto</center></i></b></th>
      <th><b><i><center>Fecha</center></i></b></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @presupuestos.each do |presupuesto| %>
      <tr>
        <td><%= presupuesto.presupuesto_id %></td>
        <td><%= presupuesto.fecha %></td>
        
        <td><%= link_to presupuesto, class:"btn btn-success"  do %>
            <i class="glyphicon glyphicon-eye-open"></i>
          <% end %>
          <%= link_to edit_presupuesto_path(presupuesto), class:" btn btn-info" do  %>
            <i class="glyphicon glyphicon-pencil"></i>
          <% end %>
          <%= link_to presupuesto, method: :delete, data: { confirm: 'Estas seguro?' }, class:'btn btn-danger' do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
<br>